	<!-- TypeHead js -->
	<script src="~/plugins/bootstrap5-typehead/autocomplete.js"></script>
    <script src="~/js/typehead.js"></script>

    <!-- INTERNAL INDEX JS -->
    <script src="~/js/index1.js"></script>

