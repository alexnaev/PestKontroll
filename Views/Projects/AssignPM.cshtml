@model PestKontroll.Models.ViewModels.AssignPMViewModel
@{
    ViewData["Title"] = "Assign PM";
}

<h1>Project:    @Model.Project.Name</h1>

<h4>Assign Project Manager</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="AssignPM" asp-controller="Projects" method="post">
            <input type="hidden" asp-for="Project.id" />

            <p>@Model.Project.Description</p>

            <div class="form-group">
                <label class="control-label">Select Project Manager</label>
                <select asp-for="PmId" class="form-control" asp-items="@Model.PMList">
                    <option></option>
                </select>

                <input type="submit" value="Assign" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="UnnassignedProjects">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
